    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch github search issue",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "args":["repo:golang/go", "is:open", "json", "decoder"]
        },
        
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": {},
            "args": []
        },

        {
            "name": "Launch Echo",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": {},
            "args": ["ricky"]
        }
    ]
